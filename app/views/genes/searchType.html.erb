<a href="/genes"><h2>NucleoDepot</h2></a>
<%form = ""%>
<%@genes.each do |gene|%>
   <%form = gene.form%>
   <%break%>
<%end%>
<h1>Search by <%=form%> results:</h1>
<a href="\searchType.csv?q=<%=form%>"><h3>Download CSV</h3></a>
<form class="form-inline-my-2 my-lg-0" action="/searchID"> <!--will this work?-->
  <input class="form-control mr-sm-2" name="q" type="text" placeholder="Search by Gene" aria-label="Search">
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Gene</button>
</form>

<form class="dropdown">
  <button onmouseover="myFunction()" class="dropbtn">Cancer Type</button>
  <div id="myDropdown" class="dropdown-content">
    <%x = ""%>
    <%@allGenes = Gene.all%>%
    <% @allGenes.each do |gene| %>
      <%if(x!=gene.form)%>
        <a href="/searchType?q=<%=gene.form%>"><%=gene.form%></a>
        <%x = gene.form%>
      <%end%>
    <%end%>
  </div>
</div>


<div></div>


<%@images.each do |image|%>
  <%if image.form == form%>
    <%= image_tag image.link, height: 300%>
  <%end%>
<%end%>

<div></div>

<a href="/searchWeb?q=<%=form%>">See String-db Data</a>


<ul>
<%x=0%>
  <% @genes.each do |gene| %>
    <%break if x>=1000%>
    <li>
        <%x+=1%>
      <a href="/genes/<%= gene.id %>"> <!--maybe put this stuff in an array and print it later-->
      <%=gene.identity%>
    </a>
    </li>
  <%end%>
</ul>

